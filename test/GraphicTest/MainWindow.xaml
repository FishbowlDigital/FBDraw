<Window x:Class="GraphicTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition  Width="Auto" />
        </Grid.ColumnDefinitions>
        <Image x:Name="m_image" Margin="0,0,0,0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
        <Button Name="m_btnTest" Grid.Column="1" Content="Test" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Click="m_btnTest_Click"/>
    </Grid>
</Window>
